# Jupiter Arbitrage Bot Configuration
# Copy this to your .env file and update the values

# =============================================================================
# WALLET CONFIGURATION (REQUIRED)
# =============================================================================

PRIVATE_KEY=
SOLANA_WALLET_PRIVATE_KEY=

# =============================================================================
# RPC CONFIGURATION (REQUIRED)
# =============================================================================
DEFAULT_RPC=https://solana-mainnet.g.alchemy.com/v2/1VO2FcU3Hv7FPSzKMQ6n4
ALT_RPC_LIST=https://solana-mainnet.g.alchemy.com/v2/1VO2FcU3Hv7FPSzKMQ6n4
# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Enable/disable actual trading (set to false for simulation mode)
TRADING_ENABLED=true

# Trade size in SOL (start small for testing)
TRADE_SIZE_SOL=0.05
TRADE_SIZE_STRATEGY=fixed

# Profit threshold (minimum profit percentage to execute trade)
MIN_PROFIT_THRESHOLD=0.025

# Maximum slippage percentage
MAX_SLIPPAGE_PERCENT=0.8

# Transaction priority (micro lamports)
PRIORITY=100000

# =============================================================================
# TIMING CONFIGURATION (INCREASED FOR STABILITY)
# =============================================================================
# Minimum interval between operations (increased from 1500 to 3000ms)
MIN_INTERVAL_MS=10000

# Update interval for main bot loop (increased from 10000 to 20000ms)
UPDATE_INTERVAL=30000

# Token rotation interval in minutes
TOKEN_ROTATION_INTERVAL_MINUTES=5

# =============================================================================
# ERROR HANDLING & RETRY CONFIGURATION
# =============================================================================
# Enable automatic retry of failed operations
AUTO_RETRY_FAILED=true

# Delay between retries (increased for better stability)
RETRY_DELAY_MS=5000

# Maximum retry attempts
MAX_RETRY_ATTEMPTS=2

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Enable adaptive slippage based on market conditions
ADAPTIVE_SLIPPAGE=true

# Wrap/unwrap SOL automatically
WRAP_UNWRAP_SOL=true

# =============================================================================
# LOGGING AND DEBUG CONFIGURATION
# =============================================================================
# Enable debug mode (provides more detailed logs)
DEBUG=true

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable logging to files
LOG_TO_FILE=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# UI color scheme
UI_COLOR=cyan

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Node environment
NODE_ENV=production

# Network (mainnet-beta, devnet, testnet)
NETWORK=mainnet-beta

# =============================================================================
# MEMORY MANAGEMENT
# =============================================================================
# Maximum trade history entries to keep in memory
MAX_TRADE_HISTORY=50000

# Maximum chart data points
MAX_CHART_DATA_POINTS=100

# Garbage collection interval in milliseconds
GC_INTERVAL_MS=300000

# =============================================================================
# SAFETY SETTINGS
# =============================================================================
# Maximum consecutive errors before shutdown
MAX_CONSECUTIVE_ERRORS=5

# Enable emergency shutdown on critical errors
ENABLE_EMERGENCY_SHUTDOWN=true

# Maximum memory usage percentage before cleanup
MAX_MEMORY_USAGE_PERCENT=50