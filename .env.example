# Jupiter Arbitrage Bot Configuration - DYNAMIC TRADE SIZING
# Copy this to your .env file and update the values

# =============================================================================
# WALLET CONFIGURATION (REQUIRED)
# =============================================================================

PRIVATE_KEY=your_private_key_here
SOLANA_WALLET_PRIVATE_KEY=your_base58_private_key_here

# =============================================================================
# RPC CONFIGURATION (REQUIRED)
# =============================================================================
DEFAULT_RPC=https://solana-mainnet.g.alchemy.com/v2/your_api_key
ALT_RPC_LIST=https://api.mainnet-beta.solana.com,https://solana-api.projectserum.com

# =============================================================================
# DYNAMIC TRADING CONFIGURATION - REAL TRADING ENABLED
# =============================================================================
# ⚠️ CRITICAL: Set to true to enable real trading with real money
TRADING_ENABLED=true

# MAXIMUM trade size in SOL - Bot will find optimal sizes UP TO this limit
MAX_TRADE_SIZE_SOL=0.15

# MINIMUM trade size in SOL - Don't go below this (for gas efficiency)
MIN_TRADE_SIZE_SOL=0.005

# Dynamic sizing strategy: "optimal" or "stepped" 
TRADE_SIZE_STRATEGY=optimal

# Number of different trade sizes to test per opportunity
TRADE_SIZE_TESTS=5

# Profit threshold (minimum profit percentage to execute trade)
# 0.5 = 0.5% minimum profit per trade
MIN_PROFIT_THRESHOLD=0.1

# Maximum slippage percentage (1.0 = 1%)
MAX_SLIPPAGE_PERCENT=4.0

# Transaction priority (micro lamports) - higher = faster execution
PRIORITY=150000

# =============================================================================
# MEV PROTECTION & OPTIMIZATION
# =============================================================================
# Enable MEV protection strategies
ENABLE_MEV_PROTECTION=true

# Use Jito bundles for MEV protection
USE_JITO_BUNDLES=true

# Randomize gas prices to avoid pattern detection
RANDOMIZE_GAS=true

# Private mempool submission (when available)
USE_PRIVATE_MEMPOOL=true

# Maximum acceptable MEV loss percentage
MAX_MEV_LOSS_PERCENT=0.02

# =============================================================================
# TIMING CONFIGURATION
# =============================================================================
# Minimum interval between operations (milliseconds)
MIN_INTERVAL_MS=3000

# Update interval for main bot loop (milliseconds)
UPDATE_INTERVAL=8000

# Token rotation interval in minutes
TOKEN_ROTATION_INTERVAL_MINUTES=2

# Delay between trade size tests (milliseconds)
SIZE_TEST_DELAY_MS=500

# =============================================================================
# ERROR HANDLING & RETRY CONFIGURATION
# =============================================================================
# Enable automatic retry of failed operations
AUTO_RETRY_FAILED=true

# Delay between retries
RETRY_DELAY_MS=2000

# Maximum retry attempts
MAX_RETRY_ATTEMPTS=3

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Enable adaptive slippage based on market conditions
ADAPTIVE_SLIPPAGE=true

# Wrap/unwrap SOL automatically
WRAP_UNWRAP_SOL=true

# Enable smart order routing
SMART_ORDER_ROUTING=true

# Maximum price impact acceptable per trade
MAX_PRICE_IMPACT_PERCENT=2.0

# =============================================================================
# LOGGING AND DEBUG CONFIGURATION
# =============================================================================
# Enable debug mode (provides more detailed logs)
DEBUG=true

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable logging to files
LOG_TO_FILE=true

# Log all trade size tests (can be verbose)
LOG_SIZE_TESTS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# UI color scheme
UI_COLOR=cyan

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Node environment
NODE_ENV=production

# Network (mainnet-beta, devnet, testnet)
NETWORK=mainnet-beta

# =============================================================================
# MEMORY MANAGEMENT
# =============================================================================
# Maximum trade history entries to keep in memory
MAX_TRADE_HISTORY=1000

# Maximum chart data points
MAX_CHART_DATA_POINTS=100

# Garbage collection interval in milliseconds
GC_INTERVAL_MS=300000

# =============================================================================
# SAFETY SETTINGS
# =============================================================================
# Maximum consecutive errors before shutdown
MAX_CONSECUTIVE_ERRORS=10

# Enable emergency shutdown on critical errors
ENABLE_EMERGENCY_SHUTDOWN=true

# Maximum memory usage percentage before cleanup
MAX_MEMORY_USAGE_PERCENT=80

# =============================================================================
# DYNAMIC SIZING SPECIFIC SETTINGS
# =============================================================================
# Minimum profit per trade in USD (overrides percentage if higher)
MIN_PROFIT_USD=0.25

# Maximum trades per token pair per hour (rate limiting)
MAX_TRADES_PER_HOUR=640

# Enable size optimization based on historical performance
ENABLE_SIZE_OPTIMIZATION=true

# Preferred trade size percentages to test (comma separated)
PREFERRED_SIZE_PERCENTAGES=10,25,50,75,90